<div class="game-item-card">

    @if(ItemDetails != null)
    {
        @if(ItemDetails.ImagePath != null)
        {
            <div class="image">
                <a href="/games/@GameId/items/@ItemId"><img alt="@ItemDetails.Name" src="@ItemDetails.ImagePath" /></a>
            </div>
        }
        else
        {
            <div class="image">
                <a href="/games/@GameId/items/@ItemId"><img alt="@ItemDetails.Name" src="/static/placeholder-item.png" /></a>
            </div>
        }
        <div class="title">
            <a href="/games/@GameId/items/@ItemId">@ItemDetails.Name</a>
        </div>
        <div class="nav-menu">
            <a href="/games/@GameId/items/@ItemId">See more..</a>
        </div>            
    }

</div>

@code {
    [Parameter]
    public string? ItemId { get; set; }

    [Parameter]
    public GameIndexItem? ItemDetails { get; set; }

    [Parameter]
    public string? GameId { get;set; }
 }